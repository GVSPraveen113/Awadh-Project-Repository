<%- include("../partials/header")%>
<%- include("../partials/navbar")%>

<h2 style="text-align:center;">CREATE A NEW BLOG</h2>
<div class="container" style="margin-right:2rem;margin-top:2rem;width:40vw;border:1px solid black">
 
    <form class="validated-form" action="/blogs" method="POST" style="max-width:70%;margin:10px auto" novalidate>
        <div class="mb-3">
          <label for="title" class="form-label">Blog Title</label>
          <input type="text" class="form-control" id="title" placeholder="Add Title" name="blog[title]" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <label for="img" class="form-label">Image URL</label>
          <input type="text" class="form-control" id="img" placeholder="Image URL" name="blog[img]" required>
          <div class="valid-feedback">
            Looks good!
        </div>
        </div>
        <div class="mb-3">
            <label for="content" class="form-label">Content</label>
            <textarea class="form-control" id="content" cols="30" rows="5" name="blog[content]" required></textarea>
            <div class="valid-feedback">
              Looks good!
            </div>
        </div>
        <button type="submit" class="btn btn-success" style="color:red">CREATE A BLOG</button>
        </form>

</div>        


<div class="row blogs">
    <%for(let blog of blogs){%>
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card text-center m-3" id="border" style="width: 40vw; height:250px">
                <img src="<%=blog.img%>" class="card-img-top" style="height:40vh" alt="Image Deleted Probably">
                <div class="card-body">
                  <h5 class="card-title"><%=blog.title%></h5>
                  <p class="card-text"><%=blog.content%></p>
                  <p class="card-text"><%=blog.author%></p>

                </div>
              </div>
        </div>
   <% }%>
</div>




<%- include("../partials/footer")%>